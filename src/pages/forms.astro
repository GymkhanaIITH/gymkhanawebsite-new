---
import Layout from "../layouts/Layout.astro";
import generalCouncilIcon from "../images/icons/general_council.png";
import messCouncilIcon from "../images/icons/mess_council.png";
import mediaCouncilIcon from "../images/icons/media_council.png";
---

<Layout title="Forms">
    <div class="p-8 md:p-12">
        <div class="">
            <div class="bg-r h-[6px] w-full self-center mb-6">
                <div class="bg-p h-[6px] w-16 ml-16"></div>
            </div>
        </div>
        <h1 class="font-bold text-center text-5xl md:text-7xl md:text-left lg:text-8xl text-white">
            Forms 
        </h1>
    </div>
    <div class="p-8 lg:px-[6rem] pt-0">
        <div class="flex justify-center">
            <div class="grid lg:grid-cols-3 md:grid-cols-2 grid-cols-1 gap-8">
                <a href='https://docs.google.com/spreadsheets/d/13R9rHEto70_CeFNH8e5Sybj5oYaz0WOBl_lY1an8P2U/edit#gid=2145528018' target="_blank" rel="noopener norefferer">
                    <div class="p-4 bg-[#040404] hover:scale-105 transition-all duration-300 flex flex-col gap-4 w-60 h-48 justify-center items-center rounded-xl text-white">
                        <img src={messCouncilIcon} class="w-12 h-12" alt="icon" />
                        <span class="text-xl font-bold text-center">Mess Menu</span>
                    </div>
                </a>
                <a href='https://docs.google.com/forms/d/e/1FAIpQLSd6KXqqf9No4WhMKWm2qxkWcj2QtWlpLrQBM2FvrYc7dyHSdw/viewform' target="_blank" rel="noopener norefferer">
                    <div class="p-4 bg-[#040404] hover:scale-105 transition-all duration-300 flex flex-col gap-4 w-60 h-48 justify-center items-center rounded-xl text-white">
                        <img src={mediaCouncilIcon} class="w-12 h-12" alt="icon" />
                        <span class="text-xl font-bold text-center">Report Event</span>
                    </div>
                </a>
                <a href='https://docs.google.com/forms/d/e/1FAIpQLSfJhh0oRnRz6sY2JayEEi6M6mNhfRxsGxWOFkB2JMIqffeQew/viewform' target="_blank" rel="noopener norefferer">
                    <div class="p-4 bg-[#040404] hover:scale-105 transition-all duration-300 flex flex-col gap-4 w-60 h-48 justify-center items-center rounded-xl text-white">
                        <img src={generalCouncilIcon} class="w-12 h-12" alt="icon" />
                        <span class="text-xl font-bold text-center">Achievements Form</span>
                    </div>
                </a>
                <a href='https://iithbus.vercel.app/' target="_blank" rel="noopener norefferer">
                    <div class="p-4 bg-[#040404] hover:scale-105 transition-all duration-300 flex flex-col gap-4 w-60 h-48 justify-center items-center rounded-xl text-white">
                        <img src={generalCouncilIcon} class="w-12 h-12" alt="icon" />
                        <span class="text-xl font-bold text-center">Transport Schedule</span>
                    </div>
                </a>
                <a href='https://docs.google.com/forms/d/e/1FAIpQLSdW4jUr-B6J_PoKAnY2YZ8PjG23xAsLlWFyrbQPyxPhspzm6g/viewform' target="_blank" rel="noopener norefferer">
                    <div class="p-4 bg-[#040404] hover:scale-105 transition-all duration-300 flex flex-col gap-4 w-60 h-48 justify-center items-center rounded-xl text-white">
                        <img src={messCouncilIcon} class="w-12 h-12" alt="icon" />
                        <span class="text-xl font-bold text-center">Mess Grievance</span>
                    </div>
                </a>
            </div>
        </div>
    </div>
</Layout>